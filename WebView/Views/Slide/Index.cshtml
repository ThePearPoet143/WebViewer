@model List<WebView.ViewModel.VMSlide>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Please choose your slide to view</h2>
<table class="table">
    <tr>
        <th>
            Barcode
        </th>
        <th>
            Accession
        </th>
        <th>
            Case
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Type
        <th>
            Start Time
        </th>
        <th>
            Area
        </th>
        <th>
            Ikoniscope
        </th>
        <th>
            Scan Time
        </th>
        <th>
            Scan Result
        </th>
        <th>
            Nuclei Low
        </th>
        <th>
            Targets Low
        </th>
        <th>
            Targets High
        </th>
        <th>
            Density
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Barcode.ToString(), "Detail", "Slide", new { barcode = item.Barcode, startTime = item.StartTime, sliderunAppscanID = item.SliderunAppscanID }, null)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Accession)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Case)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ikoniscope)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScanTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScanResult)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NucleiLow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetsLow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetsHi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Density)
            </td>
            <td>
                @Html.HiddenFor(modelItem => item.SliderunAppscanID)
            </td>

        </tr>
    }

</table>
